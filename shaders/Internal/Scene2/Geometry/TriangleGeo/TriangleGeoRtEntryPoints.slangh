#pragma once
#include "Internal/Scene2/DummyRtDelegate.slangh"
import Internal.Scene2.Geometry.TriangleGeo.TriangleGeoAccessor;

[shader("closesthit")]
void scatterClosestHitTriangleGeo(
    inout SCENE2_GEO_RT_DELEGATE::Payload payload: SV_RayPayload,
    BuiltInTriangleIntersectionAttributes attribs: SV_IntersectionAttributes
)
{
    TriangleGeoHitInfo hit;
    hit.data = TriangleGeoAccessor::makeHitInfo(attribs);
    SCENE2_GEO_RT_DELEGATE_INSTANCE.handleHit(payload, hit);
}
